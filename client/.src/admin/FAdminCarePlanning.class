'-------------------------------------------------------------------------
' A module to allow global defaults for filling in details in FPastHistory
' whilst working towards care planning
' eg. icpc code for diabetes linked to default data for management goals
' actions of the GP, patient and Specialist in the disease management
' These are made available to all doctors - but the GP can over-ride these
' if they wish
' -------------------------------------------------------------------------

Private FHelp As FHtmlViewer
Private bExit As Boolean



Public Sub Init()
   
    With FHelp = New FHtmlViewer(Vbox_Help)
      .tbWebBrowserZoomIn.Visible = True
      .tbWebBrowserZoomOut.Visible = True
   End With
   FHelp.Help_Show("admin-careplan-templates.html")
   modEditAreaHelpers.Resize_labels(VBox_EditArea_Inner, lblMeasure)
End


Public Sub form_Close()

   Settings_Save()

End

Public Sub Settings_Save()

   Settings["FAdminCarePlanning/Help_Zoom"] = FHelp.WebView1.Zoom
   Settings["FAdminCarePlanning/HSplit_AdminCarePlanning.Layout"] = HSplit_AdminCarePlanning.Layout

End

Private Sub Settings_Load()

   FHelp.WebView1.Zoom = Settings["FAdminCarePlanning/Help_Zoom", 1.0]
   HSplit_AdminCarePlanning.Layout = Settings["FAdminCarePlanning/HSplit_AdminCarePlanning.Layout", modUtil.HSplit([655, 1019])]
  
End