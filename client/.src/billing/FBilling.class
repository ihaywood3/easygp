' A class to handle billing for the surgery
' This is basically a 'container'
' Loads onto the first tab the invoices/payments then others on demand
'----------------------------------------------------------------------

Private Const cTab_Invoices As Integer = 0
Private Const cTab_AccountHistory As Integer = 1
Private Const cTab_Fee_Schedule As Integer = 2
Private form_feeschedule As FFeeSchedule
Private form_invoice_receipts As FRecordVisit_New
Private form_account_history As FAccountHistory

Public Sub _new()
 
   form_invoice_receipts = New FRecordVisit_New(VBox_Invoices_Receipts)

End

Public Sub TabStrip1_Click()
   
   Select Case Tabstrip1.Index
      Case cTab_AccountHistory
         If IsNull(form_account_history) Then
            form_account_history = New FAccountHistory(Vbox_AccountHistory)
         Endif
      Case cTab_Fee_Schedule
         If IsNull(form_feeschedule) Then
            form_feeschedule = New FFeeSchedule(Vbox_FeeSchedule)
         End If
         
   End Select
   
End
