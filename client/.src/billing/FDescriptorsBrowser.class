   If Last.tag <> "search" Then 
      EditArea_Notify_Datachange(True)
   End If 
   Select Case Last.tag
      Case "mbs item number", "search"
         EditArea_Clear()
         EditArea_Notify_Datachange(False)
   End Select
   
