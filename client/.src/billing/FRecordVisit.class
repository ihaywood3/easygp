Public Sub Invoice_Calculate_Total()
   
   Dim x As Integer
   Dim total As Float
   
   For x = 0 To gridview1.Rows.Count - 1
      If gridview1[x, 2].text = "" Then Break
      total = total + CFloat(Val(Replace(gridview1[x, 2].text, "$", "")))
   Next
   
   lblInvoiceTotal.text = "  " & Format$(total, "$,#.###")
   
End

