' PURPOSE   Contruct a row for a list container - with Descriptors for mbs items
'------------------------------------------------------------------------------

Private Descriptor As Collection 
Private $hbox As HBox
Private $lbl_MBS_Item As TextLabel
Private $lbl_AMA_Item As TextLabel
Private $PnlSpacer As Panel
Private $TextLabel As TextLabel

Public Sub _new(hContainer As ListContainer, Descriptor As Collection)
   
   
   Descriptor = Descriptor         
   '--------------------------------------------------------------------------
   'This is the main 'container', holding the Descriptor picture and text details
   '--------------------------------------------------------------------------     
   With $hbox = New HBox(hContainer)
      .Mouse = Mouse.Pointing
      .expand = False
      .padding = 5
      .AutoResize = False  
      .height = 80
      .tag = descriptor!pk
   End With
   '------------------------------------------
   'First, add a Label for the MBS item number
   '------------------------------------------
   
   With $lbl_MBS_Item = New TextLabel($hbox)
      .width = 80
      .name = "LBL_MBS_ITEM"
      .text = "<P><B>MBS ITEM</B><P>" & descriptor!mbs_item
      .Alignment = Align.Top
      .Height = 82
      '.Background = Color.White
      .padding = 1
   End With
   
   With $lbl_AMA_Item = New TextLabel($hbox)
      .width = 80
      .name = "LBL_MBS_ITEM"
      .text = "<P><B>AMA ITEM</B><P>" & descriptor!ama_item
      .Alignment = Align.Top
      '.Background = Color.White
      .padding = 1
   End With
 
   '-----------------------------------------------------
   'put a spacer between the picture and the next control
   '-----------------------------------------------------
 '  With $PnlSpacer = New Panel($hbox)
 '     .width = 50 
 '  End With
   '-------------------------------
   'Now the text showing Descriptor
   '-------------------------------
   With $TextLabel = New TextLabel($Hbox)
      .Expand = True 
      .AutoResize = False  
      .font = Font["Arial,10"]
      .text = Descriptor!descriptor
   End With
End


