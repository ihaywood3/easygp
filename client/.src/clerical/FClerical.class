Private FArchiveCurrent As FArchiveDocuments
Private Form_ManageRecalls As FRecallManagement
Private form_StaffTasks As FStaffTasks
Private form_toohardbasket As FScanningTooHardBasket
Private form_documentsimported As FDocumentsImported
Private Const tab_archive_documents As Integer = 0
Private Const tab_manage_recalls As Integer = 3
Private Const tab_too_hard As Integer = 2
Private Const tab_documents_imported As Integer = 1
Private Const Archive_current As Integer = 0
Private Const Archive_Legacy As Integer = 1

Public Sub Form_Open()

  With FArchiveCurrent = New FArchiveDocuments(VBox_ArchiveCurrent)
    .Init()
  End With

End

Public Sub TabStrip1_Click()
  
  Select Case Last.Index
   Case tab_archive_documents
   Case tab_manage_recalls
      If IsNull(Form_ManageRecalls) Then
           Form_ManageRecalls = New FRecallManagement(VBox_Recalls)
      Endif
        
   Case tab_too_hard 
       If IsNull(form_toohardbasket) Then 
         form_toohardbasket = New FScanningTooHardBasket(Vbox_TooHardBasket)
       Endif
   Case tab_documents_imported 
         If IsNull(form_documentsimported) Then
            With form_documentsimported = New FDocumentsImported(Vbox_DocumentsImported)
               .Init()
            End With
         Endif
  End Select
  
End

Public Sub Settings_Save()


      FArchiveCurrent.Settings_Save()

      form_documentsimported.Settings_Save()

End

