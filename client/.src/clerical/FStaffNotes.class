Public Sub Hb_Status_Leave()
   
   current_status_combo.Visible = False   
   With current_status_label
      .Visible = True 
      .text = current_status_combo.Text
   End With
   
End

Public Sub Hb_Status_Enter()
   
   Dim HCtrl As Control
   Dim lbl As Label
   Dim cb As ComboBox
   
   For Each Hctrl In Last.Children  
      If hctrl Is Label Then
         lbl = hctrl
         lbl.Visible = False  
         current_status_label = lbl 
      Endif
      If hctrl Is ComboBox Then
         cb = hctrl
         With cb
            .Visible = True 
            .Index = cb.Find(lbl.text)
         End With
         
         current_status_combo = cb  
      Endif
   Next
   
End

