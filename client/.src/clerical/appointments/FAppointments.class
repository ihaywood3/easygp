Private form_make_appointments As FMakeAppointments
Private form_sessions_editor As FSessionEditor
Private form_feeschedule As FDescriptorsBrowser
Private form_Invoice As FRecordVisit
Private weeknames As String[]
Private staff As Collection

Private Const cTab_Appointments As Integer = 0
Private Const cTab_Invoices As Integer = 1
Private Const cTab_FeeSchedule As Integer = 2
Private Const cTab_StaffAvailability As Integer = 3

Public Sub Init()
   
   weeknames = ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"]
   staff = modUtilGUI.LoadCombo(cmbStaff, modContactsDBI.Staff_Get(), "wholename")   
   With form_make_appointments = New FMakeAppointments(VBox_Appointments)
      .Init() 
   End With
  
   
End

Public Sub form_Close()
   
   Settings_Save()
   
End

Private Sub Settings_Save()
    Try form_feeschedule.Settings_Save()
    Try form_Invoice.Settings_Save()
End


Public Sub chkExcludeWeekends_Click()
   '---------------------------------------
   'Enables or disables Saturday and Sunday
   '---------------------------------------   
   Dim hCtrl As Control
   Dim SE As FSessionEditor
   
   For Each Hctrl In HBox_SessionEditor.Children
      If hctrl Is FSessionEditor Then
         SE = hctrl
         If Se.Session_Day = "Saturday" Or SE.Session_Day = "Sunday" Then
            If Last.value = True Then 
               Se.Enabled = False  
            Else
               Se.Enabled = True  
            Endif
         Endif
      End If   
   Next
      
End


Public Sub TabStrip1_Click()
   Dim x As Integer
   
   Select Case Last.Index
     Case cTab_FeeSchedule
         If IsNull(form_feeschedule) Then
            With form_feeschedule = New FDescriptorsBrowser(Vbox_FeeSchedule)   
               .Init() 
            End With
         End If   
         
     Case cTab_Invoices 
          If IsNull(form_Invoice) Then
            With form_Invoice = New FRecordVisit(Vbox_Invoices) 
               .Init()
            End With 
         Endif
     Case cTab_StaffAvailability
         For x = 0 To 6
            With form_sessions_editor = New FSessionEditor(Hbox_SessionEditor)
               .Init(weeknames[x]) 
            End With
         Next
  End Select
End
