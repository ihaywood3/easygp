Public Sub Appointment_Delete()
   '-------------------------------------------------------------------------
   'Deletes an appointment, as deleted appointment could cover multiple slots
   'initialise the gridrows collection again before rebuilding
   '-------------------------------------------------------------------------
   
   Dim appointment As New CRow
   Dim sMsg As String
   Dim iDeletedRow As Integer
   
   If onrow = -1 Then Return
   iDeletedRow = onrow
   'first check this appointment slot has not already been billed
   If Not IsNull(gridrows[onrow]!pk_appointment) Then
      appointment!pk = gridrows[onrow]!pk_appointment
      Message.Title = "Delete an appointment"
      If Not IsNull(gridrows[onrow]!fk_patient)
         smsg = "Existing appointment for " & gridrows[onrow]!name & "\n\n"
      End If
      sMsg &= "Are you sure you wish to delete this appointment?"
      If Message.Warning(sMsg, "Yes", "No") = 2 Then Return
      If Not modAppointmentsDBI.Appointment_Delete(appointment) Then
         modDBConnect.CommitTrans()
         Reload()
         gridview1.row = iDeletedRow
      Else
         Message.Info("You cannot delete this appointment as it has already been billed.")
      End If   
   Endif
   
End

Public Sub Save(Optional bCheckSlotTaken As Boolean = True)
   
   '-----------------------------------------------------------------------------------------------
   ' Saves an appointment slot
   '     if bCheckSlotTaken is True the the the save will check the appt slot is not already taken
   '-----------------------------------------------------------------------------------------------
   ' CREATE TABLE clerical.bookings
   ' (
   '   pk bigserial NOT NULL,
   '   fk_patient integer,
   '   fk_staff integer NOT NULL,
   '   begin timestamp without time zone,
   '   duration interval,
   '   notes text,
   '   fk_staff_booked integer NOT NULL,
   '   booked_at timestamp without time zone NOT NULL DEFAULT now(),
   '   fk_clinic integer NOT NULL,
   '   deleted boolean DEFAULT false,
   '   fk_lu_appointment_icon integer,
   '   fk_lu_appointment_status integer DEFAULT 1,
   '   invoiced boolean DEFAULT false, -- if true then the consultation has been invoiced (paid or account raised)
   '   did_not_attend boolean DEFAULT false, -- if true then the the patient did not attend the appointment
   '   fk_lu_reason_not_billed integer, -- key to billing.lu_reasons_not_billed e.g 'aftercare'
   '   CONSTRAINT bookings_pkey PRIMARY KEY (pk),
   '   CONSTRAINT bookings_booked_by_fkey FOREIGN KEY (fk_staff_booked)
   '       REFERENCES admin.staff (pk) MATCH SIMPLE
   '       ON UPDATE NO ACTION ON DELETE NO ACTION,
   '   CONSTRAINT bookings_fk_clinic_fkey FOREIGN KEY (fk_clinic)
   '       REFERENCES admin.clinics (pk) MATCH SIMPLE
   '       ON UPDATE NO ACTION ON DELETE NO ACTION,
   '   CONSTRAINT bookings_fk_lu_appointment_icon_fkey FOREIGN KEY (fk_lu_appointment_icon)
   '       REFERENCES clerical.lu_appointment_icons (pk) MATCH SIMPLE
   '       ON UPDATE NO ACTION ON DELETE NO ACTION,
   '   CONSTRAINT bookings_fk_lu_appointment_status_fkey FOREIGN KEY (fk_lu_appointment_status)
   '       REFERENCES clerical.lu_appointment_status (pk) MATCH SIMPLE
   '       ON UPDATE NO ACTION ON DELETE NO ACTION,
   '   CONSTRAINT bookings_fk_lu_reason_not_billed_fkey FOREIGN KEY (fk_lu_reason_not_billed)
   '       REFERENCES billing.lu_reasons_not_billed (pk) MATCH SIMPLE
   '       ON UPDATE NO ACTION ON DELETE NO ACTION,
   '   CONSTRAINT bookings_fk_patient_fkey FOREIGN KEY (fk_patient)
   '       REFERENCES clerical.data_patients (pk) MATCH SIMPLE
   '       ON UPDATE NO ACTION ON DELETE NO ACTION,
   '   CONSTRAINT bookings_fk_staff_fkey FOREIGN KEY (fk_staff)
   '       REFERENCES admin.staff (pk) MATCH SIMPLE
   '       ON UPDATE NO ACTION ON DELETE NO ACTION
   ' )
   ' WITH (
   '   OIDS=FALSE
   ' );
   '-----------------------------------------------------------------------------------------------------
   
   Dim appointment As New CRow
   
   If onrow = -1 Then
      Return          'should never happen but there are bugs
   End If
   Try appointment!fk_patient = patient!fk_patient
   
   If Error Then
      appointment!fk_patient = gridrows[onrow]!fk_patient
   Endif
   appointment!fk_staff = staff_member!fk_staff
   If IsNull(fk_lu_appointment_status) Then fk_lu_appointment_status = 1
   If Not IsNull(gridrows[onrow]!fk_lu_appointment_status) Then
      appointment!fk_lu_appointment_status = gridrows[onrow]!fk_lu_appointment_status
   Else
      appointment!fk_lu_appointment_status = fk_lu_appointment_status
   Endif
   If appointment!fk_lu_appointment_status = Const.Appointment_Status_Emergency Then
      fk_lu_appointment_status = Const.Appointment_Status_Emergency
   Endif
   If Not IsNull(gridrows[onrow]!is_fitin) Then
      appointment_interval = "1"
   Endif
   appointment!duration = Str(appointment_interval) & " minutes"
   modAppointmentsDBI.Appointment_Process_Time(appointment, appointment_date, gridrows[onrow]!time)
   If Not IsNull(gridrows[onrow]!pk_appointment) Then
      appointment!pk = gridrows[onrow]!pk_appointment
   Endif
   appointment!notes = gridrows[onrow]!notes
   appointment!fk_staff_booked = modDBConnect.currentUser!fk_staff
   appointment!fk_clinic = fk_clinic
   appointment!fk_lu_appointment_icon = gridrows[onrow]!fk_lu_appointment_icon
   appointment!fk_lu_appointment_status = fk_lu_appointment_status
   modDBConnect.BeginTrans()
   modAppointmentsDBI.Check_Workplace_Clash(appointment)
   modAppointmentsDBI.Check_Referral_Expired(appointment)
   If bCancel_Check_Slot Then bCheckSlotTaken = False             'the appointment_add_fit() sub has already made sure this can't happen
   modAppointmentsDBI.Appointment_Save(appointment, bCheckSlotTaken) 'if don't re-set flag then this line will complain slot is taken
   Reload()
   If bMoveToNextAvailableAppointment Then
      gridview1.row = Gridview1_First_Vacant(onrow)  'there can be a null object bug here
      gridview1.UnSelectAll()                   'unselect all rows
      gridview1.Select(onrow, 1)
      Wait
   End If
   gridview1.SetFocus()
   
End

