Public Sub mnuAppointments_Click()
   '------------------------------------------------------
   'User has clicked on one of the apointment menu options
   'Default to checking the apppointment slot is not used
   '------------------------------------------------------
   
   Dim form_recurring As FRecurringAppointment
   Dim bCheckSlotTaken As Boolean = True
   Dim c As Collection
   
   bCancel_Check_Slot = False
   Select Case Last.tag
      Case "delete"
         Appointment_Delete()
         Return
      Case "no icon"
         gridrows[onrow]!fk_lu_appointment_icon = Null
         bCheckSlotTaken = False
      Case "in waiting room"
         fk_lu_appointment_status = Const.Appointment_Status_Arrived_And_Waiting
         bCheckSlotTaken = False
      Case "in consulting room"
         fk_lu_appointment_status = Const.Appointment_Status_In_Consulting_Room
         bCheckSlotTaken = False
      Case "patient gone"
         fk_lu_appointment_status = Const.Appointment_Status_Completed
         bCheckSlotTaken = False
      Case "help"
         modUtilGUI.NotImplemented("Sorry, viewing help is not implemented")
         Return
      Case "memo today only"
         With FAppointmentDayComment
            .Init(gridrows[onrow]!pk_appointment)
            If .ShowModal() Then
               Reload()
            Endif
         End With
      Case "emergency"
         If Not IsNull(gridrows[onrow]!fk_patient) Then
            Message.title = "Delete existing appointment"
            If Message.Warning("Existing patient appointment:" & gridrows[onrow]!name & "\n\nReplace with an emergency slot?", "Yes", "No") = 2 Then Return
         Endif
         fk_lu_appointment_status = Const.Appointment_Status_Emergency
      Case "add fit"
         bCancel_Check_Slot = True
         Appointment_Add_Fit()   'looks for the next slot & Via Gridview1_DblClick finds patient
         Return
      Case "did not arrive"
         fk_lu_appointment_status = Const.Appointment_Status_Did_Not_Arrive
         bCheckSlotTaken = False
      Case "recurring"
         If onrow > -1 And If onrow < gridrows.Count Then
            form_recurring = New FRecurringAppointment
            c = New Collection
            c!fk_patient = gridrows[onrow]!fk_patient
            c!fk_staff = staff_member!fk_staff
            c!fk_lu_appointment_status = gridrows[onrow]!fk_lu_appointment_status
            c!duration = Str(appointment_interval) & " minutes"
            c!fk_clinic = fk_clinic
            c!notes = gridrows[onrow]!name
            c!fk_lu_appointment_icon = gridrows[onrow]!fk_lu_appointment_icon
            form_recurring.Init(c, appointment_date, gridrows[onrow]!time)
            form_recurring.Run()
         Else
            Error.Warning("No appointment created to recur")
         Endif
         Return
      Case "sms"
         modAppointmentsDBI.Send_SMS(gridrows[onrow]!fk_patient, Subst$("Your appointment is on &1 at &2", Format$(appointment_date, "dd mmm yyyyy"), gridrows[onrow]!time))
      Case Else
         If IsNumber(Last.tag) Then gridrows[onrow]!fk_lu_appointment_icon = Val(Last.tag)
         bCheckSlotTaken = False
   End Select
   Save(bCheckSlotTaken)
   
End

