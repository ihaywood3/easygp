' Gambas class file

Private mobile As String ' the mobile to send to

Public Sub SetMobile(mobile2 As String)
   
  mobile = mobile2
  Me.Title = Subst$("Sending text to &1", mobile2) 
   
End



Public Sub tbMessage_Activate()

   bSend_Click()

End

Public Sub bSend_Click()

   modAppointmentsDBI.Send_SMS_Direct(mobile, tbMessage.Text)
   Me.Close()

End

Public Sub bCancel_Click()

   Me.Close()

End
