Private weeknames As String[]

Public Sub Form_Open()
  Dim staff As Collection
  Dim i As Collection
   
  Let weeknames = ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"]
  Let staff = modAdminDBI.Staff_Get() 
  For Each i In staff
    lbStaff.Add(i!fk_staff, i!wholename)
  Next
End


