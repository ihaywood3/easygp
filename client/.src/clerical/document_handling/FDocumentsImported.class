Public Sub Documents_Refresh_List()
   '---------------------------------------------------------
   'Refresh document list and apply filters
   'FIXME: filters not used at moment aside from patient name
   '---------------------------------------------------------
   
   Dim x As Integer
   Dim cephalexin_sensitive As Integer
   Dim cephalexin_resistant As Integer
   Dim cephalexin_not_tested As Integer
   Dim augmentin_sensitive As Integer
   Dim augmentin_resistant As Integer
   Dim augmentin_not_tested As Integer
   Dim triprim_sensitive As Integer
   Dim triprim_resistant As Integer
   Dim Triprim_not_tested As Integer
   Dim charpos As Integer
   Dim charpos_s As Integer
   Dim charpos_r As Integer
   Dim charpos_br As Integer
   Dim sensitivity As String
   Dim templ As New CTemplate("<HTML><BODY>%Sensitivities</BODY></HTML>", "html", True) ' mode2 defaults to html
   Dim results As String[]
   Dim num_male As Integer
   Dim num_female As Integer
   Dim age_less_than_15 As Integer
   Dim age_between_15_40 As Integer
   
   TextLabel1.Text = ""
   With cvwDocumentsImported
      .Clear()
      .Visible = True   
   End With
   Documents_Filtered = New Collection
   For Each Document In Documents
      If Trim(txtFilterDocumentTag.text) = "" Then             'user not filtering on document tag
         If Trim(txtFilterSender.text) = "" Then               'if they are not filtering on sender
            Document_Add(document, x)                          'just add all documents
            Inc x                         
         Else                                                  'else if they are filtering on sender                   
            If InStr(Lower(Document!originator), Trim(txtFilterSender.text)) Then  
               Document_Add(document, x)                       'only include if sender matched
               Inc x
            Endif
         End If  
      Else                                                      'user is filtering on tag
         If Not IsNull(Document!tag_user) Then                  'prefer filter on a user tag
            If InStr(Lower(Document!tag_user), Lower(Trim(txtFilterDocumentTag.text))) Then
               If Trim(txtFilterSender.text) = "" Then          'no sender filter
                  If InStr(Lower(Document!data), "no growth") + InStr(Lower(Document!data), "culture proceeding") = 0 + InStr(Lower(Document!data), "mixed growth") + InStr(Lower(Document!data), "no significant growth") + InStr(Lower(Document!data), "contamination") + InStr(Lower(Document!data), "doubtful significance") + InStr(Lower(Document!data), "interim result") + InStr(Lower(Document!data), "low likelihood") + InStr(Lower(Document!data), "organism 2") Then   
                     
                     If InStr(Document!data, "SENSITIVITIES") Then  
                        
                        If document!patient_sex = "F" Then Inc num_female
                        If document!patient_sex = "M" Then Inc num_male
                        If document!patient_age < 16 Then Inc age_less_than_15    
                        If Document!patient_age > 15 And Document!patient_age < 41 Then Inc age_between_15_40
                        
                        If InStr(document!data, "Cephalexin") Then
                           charpos = InStr(document!data, "Cephalexin")
                           charpos_br = InStr(document!data, "<", charpos)
                           sensitivity = modUtil.StripExtraBlanks(Mid(document!data, charpos, charpos_br - charpos))
                           If sensitivity = "Cephalexin S" Then Inc cephalexin_sensitive
                           If sensitivity = "Cephalexin R" Then Inc cephalexin_resistant  
                        Else
                           Inc cephalexin_not_tested
                        Endif
                        If InStr(document!data, "Trimethoprim") Then
                           charpos = InStr(document!data, "Trimethoprim")
                           charpos_br = InStr(document!data, "<", charpos)
                           sensitivity = modUtil.StripExtraBlanks(Mid(document!data, charpos, charpos_br - charpos))
                           If sensitivity = "Trimethoprim S" Then Inc triprim_sensitive
                           If sensitivity = "Trimethoprim R" Then Inc triprim_resistant 
                        Else
                           Inc Triprim_not_tested  
                        Endif
                        If InStr(document!data, "Augmentin") Or InStr(document!data, "Amoxycillin/Clavulanate") Then
                           If InStr(document!data, "Augmentin") Then    
                              charpos = InStr(document!data, "Augmentin")
                              charpos_br = InStr(document!data, "<", charpos)
                              sensitivity = modUtil.StripExtraBlanks(Mid(document!data, charpos, charpos_br - charpos))
                              If sensitivity = "Augmentin S" Then Inc augmentin_sensitive
                              If sensitivity = "Augmentin R" Then Inc augmentin_resistant  
                           End If   
                           If InStr(document!data, "Amoxycillin/Clavulanate") Then
                              charpos = InStr(document!data, "Amoxycillin/Clavulanate")
                              charpos_br = InStr(document!data, "<", charpos)
                              sensitivity = modUtil.StripExtraBlanks(Mid(document!data, charpos, charpos_br - charpos))
                              Print "sensitivity for " & sensitivity
                              If sensitivity = "Amoxycillin/Clavulanate S" Then Inc augmentin_sensitive
                              If sensitivity = "Amoxycillin/Clavulanate R" Then Inc augmentin_resistant 
                           Endif 
                        Else
                           Inc augmentin_not_tested
                        End If 
                        Document_Add(document, x)
                        Inc x
                        Print x
                     End If 
                  End If   
               Else                                             'also filtering on sender
                  If InStr(Lower(Document!originator), Trim(txtFilterSender.text)) Then  
                     Document_Add(document, x)                       'only include if sender matched
                     Inc x
                  Endif
               End If
            Endif
         Else
            If InStr(Lower(Document!tag), Lower(Trim(txtFilterDocumentTag.text))) Then
               If Trim(txtFilterSender.text) = "" Then          'no sender filter
                  Document_Add(document, x)
                  Inc x
               Else                                             'also filtering on sender
                  If InStr(Lower(Document!originator), Trim(txtFilterSender.text)) Then  
                     Document_Add(document, x)                       'only include if sender matched
                     Inc x
                  Endif
               End If
            End If
         End If
      End If 
   Next
   
   lblMeasure.font = cvwDocumentsImported.Font
   modUtilGUI.Columnview_Columns_Set_Size(cvwDocumentsImported, lblmeasure)
   
   templ.Row("", " Sensitive ", " Insensitive ", " Not Tested ", " Percentage ")
   templ.Row("Cephalexin", Str(cephalexin_sensitive), Str(cephalexin_resistant), Str(cephalexin_not_tested), modUtil.As_Percent(cephalexin_sensitive, x))
   templ.Row("Augmentin", Str(augmentin_sensitive), Str(augmentin_resistant), Str(augmentin_not_tested), modUtil.As_Percent(augmentin_sensitive, x))
   templ.Row("Trimethoprim", Str(triprim_sensitive), Str(triprim_resistant), Str(Triprim_not_tested), modUtil.As_Percent(triprim_sensitive, x))
   
   templ.Table("Sensitivities")
   Print templ.GetData()
   TextLabel1.text = "<P><B>MSU Drug Sensitivities</B></P>"
   TextLabel1.text &= "<P>Female: " & Str(modUtil.As_Percent(num_female, x)) & "<BR><HR>" ""
   TextLabel1.text &= "<P>Male: " & Str(modUtil.As_Percent(num_male, x)) & "</P>"
   TextLabel1.text &= "<P>Age less than 15yrs:" & Str(modUtil.As_Percent(age_less_than_15, x)) & "</P>"
   TextLabel1.text &= "<P>" & templ.GetData() & "</P><HR>"
   Return
   TextLabel1.text = "<P><B>Cephalexin</B></P>"
   TextLabel1.text &= "Sensitive :" & Str(cephalexin_sensitive) & " " & Format(Str((cephalexin_sensitive / x) * 100), "##.##") & "%<BR>"
   TextLabel1.text &= "Resistant :" & Str(cephalexin_resistant) & "<BR>"
   TextLabel1.text &= "Not Tested:" & Str(cephalexin_not_tested) & "<BR>"
   TextLabel1.text &= "<P><B>Triprim</B></P>"
   TextLabel1.text &= "Sensitive:" & Str(triprim_sensitive) & "<BR>"
   TextLabel1.text &= "Resistant:" & Str(triprim_resistant) & "<BR>"
   TextLabel1.text &= "Not Tested:" & Str(triprim_not_tested) & "<BR>"
   TextLabel1.text &= "<P><B>Augmentin</B></P>"
   TextLabel1.text &= "Sensitive:" & Str(augmentin_sensitive) & "<BR>"
   TextLabel1.text &= "Resistant:" & Str(augmentin_resistant) & "<BR>"
   TextLabel1.text &= "Not Tested:" & Str(augmentin_not_tested) & "<BR>"
   
   TextLabel1.text &= "Total Analysed:" & Str(x)
   
Catch
   Return
   
End

Public Sub Check_Sensitivities(document As Collection, generic As String, sensitive As Integer, resistance As Integer)
   
   Dim charpos As Integer
   Dim charpos_br As Integer
   Dim sensitivity As String
   
   If InStr(document!data, generic) Then
      charpos = InStr(document!data, generic)
      charpos_br = InStr(document!data, "<", charpos)
      sensitivity = modUtil.StripExtraBlanks(Mid(document!data, charpos, charpos_br - charpos))
      Print "sensitivity for " & sensitivity
      If sensitivity = "generic" & "S" Then Inc sensitive
      If sensitivity = "generic" & "R" Then Inc resistance
   Endif
   
End

