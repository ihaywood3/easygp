Public Sub EditAreaTextBox_LostFocus()
   
   Last.BackGround = Color.white
   
End

Public Sub rbDocumentType_Click()
   
   Select Case Last.tag
      Case "gpmp"
         fk_lu_display_as = const.Document_Display_As_GP_Management_Plan
      Case "tca"
         fk_lu_display_as = const.Document_Display_As_Team_Care_Arrangement
      Case "letters"
         fk_lu_display_as = const.Document_Display_As_Letter
      Case "results"
         fk_lu_display_as = const.Document_Display_As_Result
      Case "all"
         fk_lu_display_as = 0
   End Select
   If fk_patient Then Reload()
   
End
