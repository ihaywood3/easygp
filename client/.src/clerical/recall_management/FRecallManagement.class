Private Form_Send_Recalls As FRecallsSend
Private Form_Letter_Templates As FRecallLetterTemplates

Public Sub Form_Open()
   
   Form_Send_Recalls = New FRecallsSend(Vbox_FSendRecalls)
   
End

Public Sub TabStrip1_Click()

   If IsNull(Form_Letter_Templates) Then
       Form_Letter_Templates = New FRecallLetterTemplates(Vbox_FRecallLetterTemplates)
       Form_Letter_Templates.Init() 
   Endif

End

Public Sub Settings_Save()
   
   Form_Send_Recalls.Settings_Save()         'will always exist
   Try Form_Letter_Templates.Settings_Save() 'may not exist
   
End
