Private FArchive As FArchiveDocuments
Private form_toohardbasket As FScanningTooHardBasket
Private Form_Recently_Filed As FDocumentsImported
Private Const tab_archive_documents As Integer = 0
Private Const tab_recently_filed_documents As Integer = 1
Private Const tab_too_hard As Integer = 2

Public Sub Form_Open()

  With FArchive = New FArchiveDocuments(VBox_Archiving)
    .Init()
  End With
  
End

Public Sub TabStrip1_Click()
  
  Select Case Last.Index
   Case tab_too_hard 
       If IsNull(form_toohardbasket) Then 
         form_toohardbasket = New FScanningTooHardBasket(Vbox_TooHardBasket)
       Endif
       
   Case tab_recently_filed_documents 
         If IsNull(Form_Recently_Filed) Then
            With Form_Recently_Filed = New FDocumentsImported(VBox_Recently_Filed)
               .Init()
            End With
         Endif
  End Select
  
End

Public Sub Settings_Save()


      FArchive.Settings_Save()
   

End

