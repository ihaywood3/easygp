Private Sub SetView(lnk As CLink)

   Dim fname As String
   
   If lnk.IsWeb() Then
      If current_type <> 1 Then
         ' don't bother reload form 
         Destroy_Form()
         current_web = New WebView(Me)
      Endif
      fname = Temp$()
      lnk.WriteFile(fname)
      current_web.Url = "file://" & fname
      Return
   Endif
