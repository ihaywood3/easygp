Public Sub EditArea_TextBox_Change()
   
   If bExit Then
      Return
   End If   
   Select Case Last.tag
      Case "allergen"
         If Trim(txtAllergen.text) <> "" Then
            'user entering an allergen - can't have drug stuff
            txtBrand.text = ""
            txtGeneric.text = ""
            txtATCClass.text = ""
            txtATCName.text = ""
            chkBrandSpecific.value = False   
            chkDrugSpecific.value = False 
            fk_brand = 0
            fk_product = 0
            atccode = ""
         Endif
      Case "brand"
         If Trim(txtBrand.text) = "" Then 
            fk_brand = 0
         Else
            txtAllergen.text = ""
         End If   
      Case "generic"
         If Trim(txtBrand.text) <> "" Then 
            txtAllergen.text = ""
         Endif
      Case "atc name"
         If Trim(txtATCName.TEXT) = "" Then 
            atccode = ""
         Else
            txtAllergen.text = ""
         End If   
      Case "coded term"
         If Trim(txtCodedTerm.TEXT) = "" Then 
            fk_code = ""
            fk_coding_system = 0
         End If   
   End Select
   EditArea_Notify_DataChange(True)
   
End

