   Endif
   teNotes.Format.Font.Bold = shortcut!bold
   teNotes.Insert(shortcut!text & " " & re[1].Text & "\n")
   teNotes.Format.Font.Bold = False
   teNotes.Format.Font.Underline = False
   DataChange_Update_Indicators(True)
   
End

