      pn = Replace(pn, "%col1%", "Birth Weight")
      pn = Replace(pn, "%col2%", Trim(txtBirthweight.Text) & "Kg")  
   End If   
   If Trim(txtPuerperium.text) <> "" Then    
      pn &= Table_row
      pn = Replace(pn, "%col1%", "Problems Puerperium")
