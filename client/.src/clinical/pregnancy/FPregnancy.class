Public Function ProgressNotes_Pregnancy_Create() As String
   '-------------------------------------------------------------------------------------
   'F!k what a pain. Do the progress notes, don't want data table with lots of empty rows
   '-------------------------------------------------------------------------------------
   
   Dim Pn As String 
   Dim table_row As String 
   Dim sString As String
   Dim subtable As String
   Dim bOldPregnancy As Boolean = False   
   
   Table_row = ""
   "<TR VALIGN=TOP>"
   "<TD WIDTH=25%>%col1%</TD>"
   "<TD WIDTH=75%>%col2%</TD>"
   "</TR>"
   pn = "<B>Pregnancy Details&nbsp;%babyname%</B><BR>"
   pn &= "<TABLE WIDTH=100% BORDER=0 CELLPADDING=2 CELLSPACING=0>"
   "<COL WIDTH=24%>"
   "<COL WIDTH=75%>"
   If Trim(txtBabyName.Text) <> "" Then  
      sstring = " (Baby " & Trim(txtBabyName.Text)
      If txtDateDelivery.text <> "" Then
         sSTring &= " born " & txtDateDelivery.text 
      Endif
      sstring &= ")"
      bOldPregnancy = True
   End If   
   pn = Replace(pn, "%babyname%", sString)                                  'if real live baby put in name and birthday as the heading
   If Trim(txtDateLMP.text) <> "" Then    
      pn &= Table_row
      pn = Replace(pn, "%col1%", "LMP")
      pn = Replace(pn, "%col2%", txtDateLMP.text)
   End If   
   If Trim(txtEDC.text) <> "" Then
      pn &= Table_row
      pn = Replace(pn, "%col1%", "EDC")
      pn = Replace(pn, "%col2%", txtEDC.text)
   End If   
   If Trim(txtEDCRevisedDate.text) <> "" Then  
      pn &= Table_row
      pn = Replace(pn, "%col1%", "EDC Revised")
      If Trim(txtEDCRevisedReason.text) <> "" Then 
         pn = Replace(pn, "%col2%", txtEDCRevisedDate.text & " reason:" & Trim(txtEDCRevisedReason.Text))
      Else
         pn = Replace(pn, "%col2%", txtEDCRevisedDate.text)
      Endif
   Endif
   If Trim(txtGestation.text) <> "" Then   
      pn &= Table_row
      pn = Replace(pn, "%col1%", "Gestation")
      pn = Replace(pn, "%col2%", Trim(txtGestation.text))
   End If   
   
   'Now construct a table within the main table for the risk factors
   If chkSmoking.value = True Then
      subtable &= Table_row
      subtable = Replace(subtable, "%col1%", "Smoking")
      ' If Trim(txtRiskFactorsSmoking.text) <> "" Then
      subtable = Replace(subtable, "%col2%", Trim(txtRiskFactorsSmoking.text))
      ' Endif
   End If   
   If chkAlcohol.value = True Then 
      subtable &= Table_row
