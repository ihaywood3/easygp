Public Function Letters_Received_Get(fk_patient As Integer) As Collection
   '--------------------------------------------------------------
   'Return a collection of all documents received for this patient 
   'which are not a result, order newest to oldest
   '--------------------------------------------------------------
   Dim sql As String
   sql = "Select * from documents.vwDocuments where concluded = TRUE and fk_patient = " & fk_patient
   sql &= "AND fk_lu_display_as = " & const.Document_Display_As_Letter
   sql &= " order by date_created desc"
   Return modDBConnect.exec_query_collection(sql)
End
