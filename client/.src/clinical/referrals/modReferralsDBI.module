Public Function Employee_Occupations_Category_Get(occupation As String) As Collection
  '--------------------------------------------------------
  'Gets a list of categories of occupations eg Cardiologist
  '---------------------------------------------------------
   sql = "Select DISTINCT occupation, surname, firstname , fk_person  as pk_person," 
   sql &= "title || ' ' ||firstname || ' ' || surname as wholename from "
    sql &= "contacts.vwOrganisationsEmployees where occupation ILIKE $$%" 
   sql &= occupation & "%$$ ORDER BY occupation, surname  LIMIT 20 "
   Return modDBConnect.exec_query_collection(sql)
  
End

