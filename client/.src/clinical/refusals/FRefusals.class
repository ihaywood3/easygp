Public Sub EditArea_txtBox_KeyPress()

   Dim bKeyValid As Boolean
   
   Select Case Last.tag
      Case "date_noted"
         bKeyValid = modUtilGUI.AllowKeys(const.AllowKeys_Date_DWMY, key.code)
   End Select

  If Not bKeyValid Then
     Stop Event
     Return
  Endif
End
