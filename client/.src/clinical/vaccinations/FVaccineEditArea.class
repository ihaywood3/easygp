Public sites As Collection
Public fk_vaccine As Integer
Public fk_schedule As Integer
Public fk_laterality As Integer
Public fk_site As Integer

Public Sub Init()
  sites = modUtil.LoadCombo(cmbSiteAdministration, modCommonDBI.Sites_Administration_Get(), "site")
  cmbSiteAdministration.index = cmbSiteAdministration.Find("unkown") 'laterality box not visible by default
   
End

Public Sub cmbSiteAdministration_Click()
   fk_site = Sites[cmbSiteAdministration.index]!pk
   If sites[cmbSiteAdministration.index]!has_laterality Then
      Hbox_Laterality.enabled = True
   Else
      Hbox_Laterality.enabled = False
      rbLateralityNone.value = True
   Endif
End

Public Sub rbLaterality_Click()

   fk_laterality = Last.tag
End 

