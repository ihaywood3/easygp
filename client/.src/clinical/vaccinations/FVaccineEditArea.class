Public sites As Collection
Public fk_vaccine As Variant
Public fk_schedule As Variant
Public fk_laterality As Variant
Public fk_site As Variant
Public fk_vaccination As Variant        'key to clin_vaccination.vaccinations table
Public serial_Numbers As Collection
Public marked_deleted As Boolean        'if true this vaccine has been deleted from the schedule

Public Sub Init(site_data As Collection)

   sites = modUtilGUI.LoadCombo(cmbSiteAdministration, site_data, "site")
   cmbSiteAdministration.index = cmbSiteAdministration.Find("unkown") 'laterality box not visible by default
   Reset_Keys()
 
End

Public Sub Reset_Keys()
   
   fk_vaccine = 0
   fk_schedule = 0
   fk_laterality = 0 
   fk_site = 0
   fk_vaccination = 0
   
End



Public Sub ChkNotGiven_Click()

   If Last.value = True Then
       cmbSiteAdministration.index = -1
       txtSerialNumber.text = ""
       rbLateralityNone.value = True
       fk_laterality = 0
       fk_site = 0
   Endif

End



