      With txtPatient
         .Border = False
         .Foreground = Color.Black
         .Font.Bold = False
         .ReadOnly = True
      End With
      With lblSearchFor
         .text = "Patient"
         .Font.bold = False
         .Foreground = Color.Black
      End With
      
   Else
