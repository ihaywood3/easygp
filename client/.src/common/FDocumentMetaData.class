         .Foreground = Color.Red
         .Font.Bold = True
         .ReadOnly = False  
         .SetFocus()
      End With
      With lblSearchFor
         .text = "PATIENT ??"   
         .foreground = Color.red  
         .Font.bold = True
      End With
   End If
   
   If currentDocument!fk_patient Then mnuHealthIssues_Show()
   bExit = False  
   
End

