   For Each person In persons
      columnview1.Add(x, 0)
      columnview1[x][0] = Person!firstname & " " & Person!surname & " "
      columnview1[x][1] = Person!occupation & " "
      columnview1[x][2] = Trim(" " & Person!organisation)
