Public Sub CloseButton_Click()

 
  Inc Application.Busy
  If chkSendReport.Value = True Then
    SendReport()
    Wait
  Endif
  Me.Close(0) 
  Dec Application.busy
End

Public Sub SetMessage(msg As String)
  
  teError.Text = msg
  
End

Public Sub SendReport()

  modUtil.SendMailToDeveloper("error report", Log.GetWholeLog())

End

Public Sub quitButton_Click()

  Inc Application.Busy
  If chkSendReport.Value = True Then
    SendReport()
    Wait
  Endif
  Me.Close(0) 
  Quit

End
