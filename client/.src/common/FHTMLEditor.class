Private headings As String[]

Public Sub _new()
   
   With edHtml
      .KeywordsUseUpperCase = True   
      .Highlight = Highlight.HTML
   End With 
   headings = New String[5]
   headings[0] = "<H1>text</H1>"
   headings[1] = "<H2>text</H2>"
   headings[2] = "<H3>text</H3>"
   headings[3] = "<H4>text</H4>"
   cmbheading.index = -1
   
End

Public Sub cmbheading_Click()
   
   edHtml.Insert(headings[cmbheading.index])
   
End

Public Sub EditorButtons_Click()

   Dim stable As String 
   
   Select Case Last.tag
      Case "list" 
         edHtml.Insert("<UL>\n<LI> some text \n</UL>")
      Case "table" 
         stable = "<table border =1>"
         "<TR>\n"
         "<TD> row1, cell1 </TD>\n"
         "<TD> row1, cell2 </TD>\n"
         "</TR>\n"
         "<TR>\n"
         "<TD> row2, cell1 </TD>\n"
         "<TD> row2, cell2 </TD>\n"
         "</TR>\n"
         "</TABLE>\n"
         edHtml.Insert(stable)
      Case "line break"
         edHtml.Insert("<BR>")
      Case "bold"
         edHtml.Insert("<B>text</B>")
      Case "align centre"
         edHtml.Insert("<div align=center>text</div>") 
      Case "align left"
         edHtml.Insert("<div align=left>text</div>") 
      Case "align right"
         edHtml.Insert("<div align=right>text</div>") 
      Case "italic"
         edHtml.Insert("<I>text</I>")
      Case "underline"
         edHtml.Insert("<U>text</U>")
      Case "paragraph"
         edHtml.Insert("<P>text</P>")
   End Select
   
End
