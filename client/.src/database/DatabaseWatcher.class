Event Notify(pid As Integer, param As String)


Private evt As String

Public Sub _new(evt2 As String)
   
  evt = evt2
  modDBConnect.Register_Listener(evt, Me) 
   
End

Public Sub Close()
   
  modDBConnect.Unregister_Listener(evt, Me) 
   
End

Public Sub Send_Notify(pid As Integer, param As String)
   
  Raise Notify(pid, param) 
   
End
