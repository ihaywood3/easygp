Public ID As String
Public CheckDigit As String
Public CodeIdentifyingTheCheckDigitSchemeEmployed As String
Public AssigningAuthority As New CHL7Datatype_HD("&")
Public IdentifierTypeCode As String
Public AssigningFacility As New CHL7Datatype_HD("&")

Public Sub Emit(dest As Stream)
   '----------------------------------------------------------------------
   'This function puts the information contained by this class into HL7 format
   'Variables:
   '-dest:  a stream variable where the result will be written to 
   '----------------------------------------------------------------------
   
   If IsNull(ID) Then Return
   If AssigningFacility.IsEmpty() Then
      If IsNull(IdentifierTypeCode) Then
         If IsNull(CheckDigit) Then
            modHL7Emitter.Emit("^", dest, [ID])
         Else
            modHL7Emitter.Emit("^", dest, [ID, CheckDigit, CodeIdentifyingTheCheckDigitSchemeEmployed])
         Endif
      Else
          modHL7Emitter.Emit("^", dest, [ID, CheckDigit, CodeIdentifyingTheCheckDigitSchemeEmployed, AssigningAuthority, IdentifierTypeCode])
      Endif
   Else
      modHL7Emitter.Emit("^", dest, [ID, CheckDigit, CodeIdentifyingTheCheckDigitSchemeEmployed, AssigningAuthority, IdentifierTypeCode, AssigningFacility]) 
   Endif
 
End
