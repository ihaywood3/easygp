Public mydate As Date

Private Function WithLeadingZero(i As Integer) As String
   
   If i < 10 Then 
      Return "0" & CString(i)
   Else
      Return CString(i)
   Endif
   
End

Public Sub Emit(dest As Stream)
   '----------------------------------------------------------------------
   'This function puts the information contained by this class into HL7 format
   'Variables:
   '-dest:  a stream variable where the result will be written to 
   '----------------------------------------------------------------------
   
   If Year(mydate) = 0 Then Return
   Print #dest, Year(mydate); WithLeadingZero(Month(mydate)); WithLeadingZero(Day(mydate));
   
End
