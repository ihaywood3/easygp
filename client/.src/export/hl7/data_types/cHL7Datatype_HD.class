Public ApplicationIdentifier As String   
Public UniversalID As String       '   Coded value for user-defined tables -> do what ever you want
Public UniversalIDType As String   '   Coded values for HL7 tables 
Private separator As String ' can be & when inside another datatype

Public Sub _new(Optional the_separator As String = "^")
   
   separator = the_separator 
   
End

Public Function Emit(dest As Stream)
   '----------------------------------------------------------------------
   'This function puts the information contained by this class into HL7 format
   'Variables:
   '-dest:  a stream variable where the result will be written to 
   '----------------------------------------------------------------------
   
   If UniversalIDType <> "" Then 
      modHL7Emitter.Emit(separator, dest, [ApplicationIdentifier, UniversalID, UniversalIDType])
   Else
      
      If UniversalID <> "" Then
         modHL7Emitter.Emit(separator, dest, [ApplicationIdentifier, UniversalID])
      Else 
         If ApplicationIdentifier <> "" Then
            modHL7Emitter.Emit(separator, dest, [ApplicationIdentifier])
         Else
            Return
         Endif
      Endif
   Endif  

End
