Public ProcessingID As String   
Public ProcessingMode As String

Public Sub Emit(dest As Stream)
   '----------------------------------------------------------------------
   'This function puts the information contained by this class into HL7 format
   'Variables:
   '-dest:  a stream variable where the result will be written to 
   '----------------------------------------------------------------------
   
   If IsNull(ProcessingID) And IsNull(ProcessingMode) Then Return
   
   If IsNull(ProcessingMode) Then
      modHL7Emitter.Emit("^", dest, [ProcessingID])
   Else
      modHL7Emitter.Emit("^", dest, [ProcessingID, ProcessingMode])
   Endif
   
End
