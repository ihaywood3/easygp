Public Year_NM As Integer
Public Month_NM As Integer
Public Day_NM As Integer
Public Hour_NM As Integer
Public Minute_NM As Integer
Public Second_NM As Integer
Public TimeStamp As Date

Public Sub Emit(dest As Stream)
   '----------------------------------------------------------------------
   'This function puts the information contained by this class into HL7 format
   'Variables:
   '-dest:  a stream variable where the result will be written to 
   '----------------------------------------------------------------------
   '
   
   If Not IsNull(TimeStamp) Then 
      modHL7Emitter.Emit("", dest, [Format(TimeStamp, "yyyymmddhhnnss"), "+1000"])
   Endif
   
   If Year_NM = 0 Then Return
   If Hour_NM = 0 And Minute_NM = 0 And Second_NM = 0 Then ' this is a date without time for example a date of birth 
      modHL7Emitter.Emit("", dest, [Format$(Year_NM, "0000"), Format$(Month_NM, "00"), Format$(Day_NM, "00")]) 
   Else
      modHL7Emitter.Emit("", dest, [Format$(Year_NM, "0000"), Format$(Month_NM, "00"), Format$(Day_NM, "00"), Format$(Hour_NM, "00"), Format$(Minute_NM, "00"), Format$(Second_NM, "00"), "+1000"])
   Endif
   
End
