Public ProviderNumber As String
Public FamilyName As String
Public LastNamePrefix As String
Public GivenName As String
Public MiddleInitialOrName As String
Public Suffix As String 
Public Prefix As String
Public SourceTable As String
Public AssigningAuthority As New CHL7Datatype_HD("&")
Public NameTypeCode As String
Public IdentifierCheckDigit As String
Public CodeIdentifyingTheCheckDigitSchemeEmployed As String
Public IdentifyerTypeCode As String
Public AssigningFacility As New CHL7Datatype_HD("&")

Public Sub Emit(dest As Stream)
   '----------------------------------------------------------------------
   'This function puts the information contained by this class into HL7 format
   'Variables:
   '-dest:  a stream variable where the result will be written to 
   '----------------------------------------------------------------------
   
   If FamilyName = "" And GivenName = "" And Me.ProviderNumber = "" Then 
      Return 
   Else
      
      modHL7Emitter.Emit("^", dest, [Me.ProviderNumber, Me.FamilyName, Me.LastNamePrefix, Me.GivenName, Me.MiddleInitialOrName, 
         Me.Suffix, Me.Prefix, Me.SourceTable, Me.AssigningAuthority.UniversalID, Me.NameTypeCode, Me.IdentifierCheckDigit, 
         Me.CodeIdentifyingTheCheckDigitSchemeEmployed, Me.IdentifyerTypeCode, Me.AssigningFacility])
      
   Endif
   
End
