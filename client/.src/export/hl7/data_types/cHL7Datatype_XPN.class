Public FamilyName As String
Public GivenName As String
Public MiddleInitioalOrName As String
Public Suffix As String 
Public Prefix As String
Public Degree As String
Public NameTypeCode As String  ' coded with table 0200

Public Sub Emit(dest As Stream)
   '----------------------------------------------------------------------
   'This function puts the information contained by this class into HL7 format
   'Variables:
   '-dest:  a stream variable where the result will be written to 
   '----------------------------------------------------------------------
   
   If FamilyName = "" And GivenName = "" Then Return
   If Suffix = "" And Prefix = "" And degree = "" Then
      modHL7Emitter.Emit("^", dest, [Me.FamilyName, Me.GivenName])
   Else
      modHL7Emitter.Emit("^", dest, [Me.FamilyName, Me.GivenName, Me.MiddleInitioalOrName, Me.Suffix, Me.Prefix, Me.Degree, Me.NameTypeCode])
   Endif
   
End

