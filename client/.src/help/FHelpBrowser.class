Private parent_form As FHelpEngine


Public Sub Init(the_parent_form As FHelpEngine, the_zoom As Integer)
   
   parent_form = the_parent_form
   WebView1.Zoom = the_zoom
   
End

Public Sub webview1_NewWindow(modal As Boolean)
   
  parent_form.Make_New_Tab(WebView1) 
   
End

Public Sub WebView1_Load()
   
  Dim re As Regexp
  
  If WebView1.url = "" Then Return
  re = New Regexp(WebView1.Url, "([^/]+)\\.html$")
  If re.Offset <> -1 Then
     Me.Title = re.SubMatches[1].Text
  Endif 
   
End

