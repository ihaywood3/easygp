                  If Not Files_in_DB.Exist(sFile) Then                           'if it dosn't exist in the files list in the Db
                   ' listview1.Add(sfile & "-" & Str(x), Sfile)                         'add to the listview.
                     listview1.Add(sfile, sFile)
