Public Sub Files_Manipulate(action As String)
  
   Dim fname As String
   Dim x As Integer
   Dim incoming_hl7_dir As String = ModAdminDBI.Config_Get("hl7_root_directory", "/var/easygp/hl7/incoming")
   
   listview1.MoveFirst()
   For x = 0 To listview1.Count - 1
     If listview1.Item.Selected = True Then
         Print listview1.Item.Key
         If action = "move" Then 
                Try Move DirChooser1.SelectedPath & "/" & listview1.Item.key To incoming_hl7_dir &/ listview1.Item.Key
                If Error Then Message.info("Error whilst moving file\n\n" & Error.text)
         End If
         If action = "copy" Then
           Try Copy DirChooser1.SelectedPath & "/" & listview1.Item.key To incoming_hl7_dir &/ listview1.Item.Key
           If Error Then Error Message.info("Error whilst coying file\n\n" & Error.text)
         Endif
     End If
     listview1.MoveNext()
   Next
  DirChooser1_Activate() 'reload
End

Public Sub mnFilesNotImported_Click()
  
  listview1.MoveCurrent()
  Select Case Last.tag
    Case "move single", "move all"
      Files_Manipulate("move")
    Case "delete"
       Delete_File(DirChooser1.SelectedPath &/ listview1.Item.key)
    Case "copy"
          Files_Manipulate("copy")
  End Select
  
End

