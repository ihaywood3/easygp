Private FHelp As FHtmlViewer

Public Sub Form_Open()
  Dim sPrinter As String 
  FHelp = New FHtmlViewer(Vbox_Help)
  FHelp.HBox4.Visible = False 
  HBox_DefaultPrinter_Enter() 'at startup show help for default


End

Public Sub HBox_ScriptForm_Enter()
  Dim sHtml As String = ""
 "<P ALIGN=CENTER><B><U>Prescription Form Printer</U></B></P>"
  "<P ALIGN=LEFT>This is the printer you wish to print scripts to.</P>"
 
  "<P ALIGN=LEFT STYLE=\"font-weight: normal\">"
   "To set all other script preferences please go to the Practice Staff section."
   "After selecting the staff member you may change many options"
   
  "</P>"
  Help_Show(shtml)
End

Public Sub Help_Show(shtml As String)
     FHelp.webview1.html = sHtml
End

Public Sub HBox_DefaultPrinter_Enter()
    Dim sHtml As String = ""
   "<P><B>Default Printer</B></P>"
   "Unless otherwise designated, all material will be sent directly To this printer "
    Help_Show(shtml)
End

