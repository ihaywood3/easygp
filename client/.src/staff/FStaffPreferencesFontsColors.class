Public Sub Init()
  
   bExit = True   
   txtApplicationFont.text = modAdminDBI.Config_Get_Staff_Member("user_application_font", Application.font.ToString(), Null, modDBConnect.currentUser!fk_clinic, modDBConnect.currentUser!fk_staff) 
   txtSideBarFont.text = modAdminDBI.Config_Get_Staff_Member("user_sidebar_font", FMain.Get_Sidebar_Font(), Null, modDBConnect.currentUser!fk_clinic, modDBConnect.currentUser!fk_staff) 
   ColorChooser1.value = modAdminDBI.Config_Get_Staff_Member("user_background_color", 5737869, Null, modDBConnect.currentUser!fk_clinic, modDBConnect.currentUser!fk_staff)
   bExit = False  
   Fonts_Adjust()
   
End

Private Sub Fonts_Adjust()

   lblMeasure.font = Application.Font
   lblMeasure.text = "    Application Font    "
   modEditAreaHelpers.Resize_labels(Vbox_EditArea, lblMeasure)
   
End

Public Sub btnFonts_Click()

   Dim sidebarfont As New Font 

   Select Last.tag
      Case "global font"
         Try Application.font = modUtil.Change_Fonts(Application.font)
         If Not Error Then 
            Save()
            txtApplicationFont.text = Application.font.ToString()
            FClinical.FormFonts_Adjust()
            Fonts_Adjust()
         End If
      Case "side bar font"  
         sidebarfont = modUtil.Change_Fonts(Font[txtSideBarFont.text])
         txtSideBarFont.text = sidebarfont.ToString()
       '  If Not Error Then 
         
            FMain.Set_SideBar_Fonts(sidebarfont)
               Save()
           
            
       '  End If
   End Select

End
Public Function Save() As Boolean 'fix this crap
    modAdminDBI.Config_Save_staff_member(modDBConnect.currentUser!fk_clinic, "user_application_font", Application.Font.ToString(), modDBConnect.currentUser!fk_staff) 
    modAdminDBI.Config_Save_staff_member(modDBConnect.currentUser!fk_clinic, "user_background_color", Str(ColorChooser1.value), modDBConnect.currentUser!fk_staff) 
    modAdminDBI.Config_Save_staff_member(modDBConnect.currentUser!fk_clinic, "user_sidebar_font", txtSideBarFont.text, modDBConnect.currentUser!fk_staff) 
    modDBConnect.CommitTrans()
    Return True
End

Public Sub ColorChooser1_Change()
   Dim fpg As FStaffPreferences
   
   If bExit Then Return
   
   FMain.Adjust_Colors(Last.value)
   Save()
   FStaffPreferences.Set_heading(Last.value)
 
   
End

