Private Form_Inbox As FInbox
Private Form_DayBook As FDayBook
Private Form_Patients_Seen As FPatientsSeen
Private Form_TaskManager As FTaskManager
Private Const ctab_Inbox As Integer = 0
Private Const cTab_TaskManager As Integer = 1
Private Const cTab_PatientsSeen As Integer = 2
Private Const cTab_Letters As Integer = 3

Public Sub _New()
   
   Form_Inbox = New FInbox(Vbox_Inbox)
   
End


Public Sub TabStripInbox_Click()

   lblHeading.text = ""
   Select Case Last.Index
     Case ctab_Inbox
     Case cTab_TaskManager
      If IsNull(Form_TaskManager) Then
         With Form_TaskManager = New FTaskManager(VBox_TaskManager)
            .Init() 
         End With
      End If   
     Case cTab_PatientsSeen
         If IsNull(Form_Patients_Seen) Then
             Form_Patients_Seen = New FPatientsSeen(Vbox_PatientsSeen) 
         Endif
   End Select

End
