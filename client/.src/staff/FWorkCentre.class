               .HBox_Heading.Visible = False
            End With
         End If
      'Case cTab_Reports
         ' If IsNull(Form_Reports) Then
         '    With Form_Reports = New FReportsDue(Vbox_Reports)
         '       .Init()
         '    End With
         ' Endif
      Case cTab_Dictation_Review
         If IsNull(form_dictations) Then
            With form_dictations = New FDictationsReview(VBox_Dictations)
               .Init()
            End With
         Else
            form_dictations.Refresh()
         Endif
   End Select
