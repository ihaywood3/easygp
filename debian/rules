#!/usr/bin/make -f
# This is a debian rules file
# for EasyGP
# covers both server and client packages
# Copyright (C) Ian Haywood 2009-10
# derived from example in /usr/share/doc/debhelper/rules.multi
export DH_VERBOSE=1

build: build-stamp
build-stamp: client/easygp.gambas
	dh_testdir
	touch build-stamp

client/easygp.gambas:
	cd client && gbc3 -e -a -p -m
	cd client && gba3
	cd client && mv client.gambas easygp.gambas

clean:
	dh_testdir
	rm -f build-stamp install-stamp
	rm -f debian/debhelper.log
	rm -f debian/*.debhelper
	rm -Rf `find . -name ".gambas"`
	rm -Rf `find . -name "*.gambas"`
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs
	dh_install
	touch install-stamp

# Build architecture-independent files here.
binary-indep: build install
	dh_testdir -i
	dh_testroot -i
	dh_installchangelogs -i
	dh_installdocs -i
	dh_installmenu -i
	dh_installdebconf -i
	dh_installcatalogs -i
	dh_installmime -i
#	dh_installinfo -i
#	dh_installudev -i
	dh_lintian -i
	dh_installman debian/easygp.gambas.1 -peasygp-client
	dh_installman db/easygp.8 -peasygp-server
	dh_link -peasygp-client usr/bin/easygp.gambas usr/bin/easygp
	dh_compress -i
	dh_fixperms -i
	dh_installdeb -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

# Build architecture-dependent files here.
binary-arch: build install # nothing to do here


binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
